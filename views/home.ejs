<h1>Homepage using ejs</h1>
<% if (locals.user) { %>
    <form action="/posts/create" method="post">
        <textarea name="content" id="" cols="30" rows="10"></textarea>
        <input type="submit" value="post">
    </form>    
<% } %>

<div id="postList">
    <ul>
        <% for( post of posts) { %>
            <li>
                <p>
                    <span><%= post.content %></span><br>
                    <small><%= post.user.name %></small>
                    <% if (post.user.id == locals.user.id) { %>
                        <a href=<%= `/posts/destroy/${post.id}` %>><button>Delete Post</button></a>
                    <% } %>
                    <% if (locals.user) { %>
                        <form action="/comments/create" method="post">
                            <input type="text" name="content">
                            <input type="hidden" name="post" value=<%= post.id %>>
                            <input type="submit" value="add a comment">
                        </form>
                    <% } %>
                    <% for( comment of post.comments ) { %>
                        <p>
                            <span><%= comment.content %></span>
                            <br>
                            <small><%= comment.user.name %></small>
                            <% if (comment.user.id == locals.user.id) { %>
                                <a href=<%= `/comments/destroy/${comment.id}` %>><button>Delete Comment</button></a>
                            <% } %>
                        </p>
                    <% } %>
                </p>
            </li>
        <% } %>
    </ul>
</div>